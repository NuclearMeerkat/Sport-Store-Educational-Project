@model SportsStore.Models.Order?

@{
    Layout = "_AdminLayout";
}

<h3 class="bg-info text-white text-center p-1">Order Details</h3>

@if (Model != null)
{
    <div class="card mb-3">
        <div class="card-header bg-primary text-white">
            Order ID: @Model.OrderId
        </div>
        <div class="card-body">
            <p><strong>Client Name:</strong> @Model.Name</p>
            <p><strong>Address:</strong> @Model.Line1 @Model.Line2 @Model.Line3</p>
            <p><strong>City:</strong> @Model.City</p>
            <p><strong>State:</strong> @Model.State</p>
            <p><strong>Zip:</strong> @Model.Zip</p>
            <p><strong>Country:</strong> @Model.Country</p>
            <p><strong>Gift Wrap:</strong> @(Model.GiftWrap ? "Yes" : "No")</p>
            <p><strong>Shipped:</strong> @(Model.Shipped ? "Yes" : "No")</p>
        </div>
    </div>

    <h4>Order Items</h4>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price (₴)</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Lines)
            {
                <tr>
                    <td>@line.Product.Name</td>
                    <td>@line.Product.Price</td>
                    <td>@line.Quantity</td>
                    <td>@(line.Quantity * line.Product.Price)</td>
                </tr>
            }
        </tbody>
    </table>

    <h5 class="text-right">Order Total (₴): @Model.Lines.Sum(line => line.Quantity * line.Product.Price)</h5>

    <a class="btn btn-secondary" asp-controller="Admin" asp-action="Orders">Back to Orders</a>
}
else
{
    <div class="alert alert-warning">
        Order not found.
    </div>
}
