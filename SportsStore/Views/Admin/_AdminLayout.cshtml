<!DOCTYPE html>
<html lang="en" xml:lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SportsStore</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-dark text-light p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <a class="navbar-brand" style="color: #F8F0E5!important" asp-area="" asp-controller="Home" asp-action="Index">Sport Store</a>
                </div>
                <div class="col-2 text-right">
                    <a class="btn btn-sm btn-primary" asp-controller="Home" asp-action="Index">Log Out</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row p-2">
            <div class="col-3">
                <vc:admin-navigation-menu />
            </div>
            <div class="col-9">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="/jquery/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
